<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="famar.tirepressuremonitoringsystem.MainApplication.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/card_top_margin"
            android:layout_marginLeft="@dimen/card_left_margin"
            android:layout_marginRight="@dimen/card_left_margin">
            <include
                android:id="@+id/viewFL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/grid_item_with_txt_top"
                android:layout_weight="50"
                android:layout_margin="@dimen/card_internal_margin"/>
            <include
                android:id="@+id/viewFR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/grid_item_with_txt_top"
                android:layout_weight="50"
                android:layout_margin="@dimen/card_internal_margin"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/card_top_margin"
            android:layout_marginLeft="@dimen/card_left_margin"
            android:layout_marginRight="@dimen/card_left_margin">
            <include
                android:id="@+id/viewRL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/grid_item_with_txt_bottom"
                android:layout_weight="50"
                android:layout_margin="@dimen/card_internal_margin"/>
            <include
                android:id="@+id/viewRR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/grid_item_with_txt_bottom"
                android:layout_weight="50"
                android:layout_margin="@dimen/card_internal_margin"/>
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/imgCarLogo"
        android:layout_width="85dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:src="@drawable/no_car"/>
</FrameLayout>
